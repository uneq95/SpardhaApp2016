<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_sport_item"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    android:focusable="false"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSportsIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/greyplaceholder"
            android:transitionName="@string/event_image_transition" />

        <TextView
            android:id="@+id/tvSportName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/text_back_panel"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="CRICKET"
            android:textColor="@color/white"
            android:textSize="@dimen/event_text_size"
            android:textStyle="bold" />

    </FrameLayout>
</android.support.v7.widget.CardView>
