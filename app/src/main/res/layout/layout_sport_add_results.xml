<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etSportsDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sport full description"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="match date"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etTeam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="team1 name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etTeam2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="team2 name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="final score (TEAM1 -- TEAM2)"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etVerdict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="verdict"
        android:padding="8dp" />

    <Button
        android:id="@+id/btSubmitFixture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Add result" />
</LinearLayout>